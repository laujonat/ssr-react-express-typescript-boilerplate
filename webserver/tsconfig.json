{
    "compilerOptions": {
        "lib": [ /* Declare compiler API declaration groups. */
            "es2017",
            "dom"
        ],
        "sourceMap": true, /* Generates corresponding '.map' file. */
        "allowSyntheticDefaultImports": true, /*  Allow default imports from modules with no default export. */
        "target": "esnext", /* Target latest version of ECMAScript. */
        "moduleResolution": "node", /* Search under node_modules for non-relative imports. */
        "forceConsistentCasingInFileNames": true,
        "strict": true, /* Enable strictest settings like strictNullChecks & noImplicitAny. */
        "allowJs": true, /* Process & infer types from .js files. */
        "noEmit": true, /* Don't emit; allow Babel to transform files. */
        "jsx": "react", /* Keep JSX syntax. */
        "outDir": "./build", /* Output directory */
        "esModuleInterop": true, /* Import non-ES modules as default imports. */
        "removeComments": true, /* Do not emit comments to output. */
        "baseUrl": "./", /* All module imports with non-relative names are assumed to be relative to the baseUrl.*/
        "skipLibCheck": true  /* Needed for styled-components */
    },
    "include": [ "src/**/*" ], 
    "exclude": [ 
      "node_modules"
    ],
    "paths": {
        "@src/components/*": [ "./src/components/*" ],
        "@src/*": [ "src/*" ],
        "@server/*": [ "src/server/*" ],
        "*": [ "node_modules/*" ]
    },
    "types": [
        "express",
        "node",
        "react",
        "react-dom",
        "prop-types",
        "styled-components",
        "terser-webpack-plugin"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./src/types/"
    ]
}
